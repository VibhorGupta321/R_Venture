<?xml version="1.0" encoding="utf-8"?>
<!--Rventure-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical">
    <!--    tools:context=".ProfilePage">-->

    android:layout_centerVertical="true"
    android:layout_centerVertical="true"

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:padding="40dp"
        android:background="#361212"
        android:fadingEdge="horizontal">

        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"


            android:src="@drawable/cart">

        </ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profile_image"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"


            android:fontFamily="sans-serif-condensed-medium"
            android:gravity="center"
            android:text="Confirm Pickup"
            android:textColor="@color/white"
            android:textSize="25sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="-50dp">



        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:layout_height="140dp"
            android:layout_weight="1"
            android:padding="500dp">

            <RelativeLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"

                android:padding="5dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="4dp"

                    android:src="@drawable/cycle">

                </ImageView>

                <!--                <TextView-->
                <!--                    android:layout_width="wrap_content"-->
                <!--                    android:layout_height="wrap_content"-->
                <!--                    android:layout_alignParentEnd="true"-->
                <!--                    android:layout_marginLeft="150dp"-->
                <!--                    android:layout_marginTop="10dp"-->
                <!--                    android:layout_marginEnd="85dp"-->
                <!--                    android:fontFamily="sans-serif-condensed-medium"-->
                <!--                    android:text="12"-->
                <!--                    android:textColor="@color/white"-->
                <!--                    android:textSize="25sp">-->

                <!--                </TextView>-->

                <!--                <TextView-->
                <!--                    android:layout_width="wrap_content"-->
                <!--                    android:layout_height="wrap_content"-->
                <!--                    android:layout_alignParentEnd="true"-->
                <!--                    android:layout_marginLeft="150dp"-->
                <!--                    android:layout_marginTop="35dp"-->
                <!--                    android:layout_marginEnd="50dp"-->
                <!--                    android:fontFamily="sans-serif-condensed-medium"-->
                <!--                    android:text="Bookings"-->
                <!--                    android:textColor="@color/white"-->
                <!--                    android:textSize="25sp">-->

                <!--                </TextView>-->


            </RelativeLayout>

        </com.google.android.material.card.MaterialCardView>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:orientation="vertical">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Product Name"
            android:layout_marginBottom="10dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/product_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/bike_icon"
                android:drawablePadding="10dp"
                android:text="FireFox">

            </com.google.android.material.textfield.TextInputEditText>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Product Price(Per Hour Rs.)"
            android:layout_marginBottom="10dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/product_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_money"
                android:drawablePadding="10dp"
                android:text="100/hr">

            </com.google.android.material.textfield.TextInputEditText>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Pickup Location"
            android:layout_marginBottom="10dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/product_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_loc"
                android:drawablePadding="10dp"
                android:text="Indian Institute of Information Technology Lucknow">

            </com.google.android.material.textfield.TextInputEditText>
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/rentbtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rent"
            android:fontFamily="sans-serif-condensed"
            android:background="#361212">

        </Button>






    </LinearLayout>


</LinearLayout>
